#!/bin/sh -ue
#.help
# Run Pyr with custom interactive console.

# modify these variables:
pyr="$(dirname "$0")/../pyr"
interact_path="$0-lib"
interact_main="_user_custom_interact"


is_interact() {
    while [ $# -gt 0 ]; do
        case "$1" in
            --) shift; break ;;
            --*) shift ;;
            -?*) shift ;;
            *) break ;;
        esac
    done
    [ $# = 0 ] || [ x"$1" = x- ]
}
if is_interact "$@"; then
    set -- -p"$interact_path" --interact="$interact_main" "$@"
fi
exec "$pyr" "$@"
